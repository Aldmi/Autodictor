<?xml version="1.0" encoding="utf-8"?>
<Root>
  <CisSetting>
    <Name>Рижский</Name>
    <EndpointAddress>http://127.0.0.1:50000/Service/Cis</EndpointAddress>
  </CisSetting>

  <LogSetting>
    <PortionString>2</PortionString>
	<CountPortion>2</CountPortion>
  </LogSetting>

  
  <SerialPorts>
	<Serial>
      <Port>3</Port>
	  <BaudRate>19200</BaudRate>
	  <DataBits>8</DataBits>
	  <StopBits>1</StopBits>
	  <Parity>Even</Parity>  
	  <DtrEnable>True</DtrEnable> 
	  <RtsEnable>True</RtsEnable> 
    </Serial>
  </SerialPorts>

  
  <DevicesWithSP> 
	 <DeviceSp Id="22" Name="MyVidorDisplay" Port="3" Address="1" TimeRespone="1000" Description="Вывод ПРИГОРОДНОГО расписания." Binding="ToPath:1,2,3,4">
	      <ExchangeRules>  
		    <Table Size= "3">
		       <Rule Format = "Windows-1251">
			      <Request maxLenght = "254">
				    STX{AddressDevice:X2}{Nbyte:X2}
					%30{Hour:D2}{Minute:D2}{Second:D2}<!-- синхр. вр -->
					%00002047{(rowNumber*11):D3}4%10$00$60$t3$12{NumberOfTrain}<!-- Номер поезда -->
					%00048165{(rowNumber*11):D3}4%10$00$60$t3$12{Stations}<!-- Вывод станций -->
					%00171207{(rowNumber*11):D3}4%10$00$60$t3$12{Time:t}<!-- Вывод Времени -->
					%00231252{(rowNumber*11):D3}4%10$00$60$t3$12{PathNumber}<!-- Вывод Пути -->
					{CRCXor:X2}ETX
		          </Request >

			      <Response maxLenght = "8" TimeRespone="500">
				    STX0200FDETX
		          </Response >	  
		       </Rule>
             </Table>
		  </ExchangeRules>
	 </DeviceSp>
	 
	 
	 <DeviceSp Id="2" Name="VidorTableStr1" Port="3" Address="1" TimeRespone="1000" Description="Панель Видор 8 строк, вывод пригородного расписания." Binding="ToPath:1,2,3,4" CountRow="3"/>
  </DevicesWithSP>

  <DevicesWithPC>
	 <!-- <DevicePc Id="100" Name="PcTable" Address="http://localhost:8001/Service" TimeRespone="800" Description="Панель на пути тест" Binding="ToPath:1,2,3,4,5" Contrains="ПРИБ." Paging=""/> -->
	 <DevicePc Id="101" Name="PcTable" Address="http://localhost:8001/Service" TimeRespone="800" Description="Панель на пути тест" Binding="ToGeneral:ОкноРасписания" Contrains="ПРИБ.;БольшеТекВремени" Paging="7,5"/>
  </DevicesWithPC>
   
  <DevicesWithTcpIp>
	 <DeviceTcpIp Id="200" Name="VidorTableStr1" Address="192.168.178.101:8000"  DeviceAddress="1,11"  TimeRespone="500" Description="Панель на пути тест" Binding="ToPath:1,2,3,4" Contrains="ПРИБ." CountRow="8"/>
  </DevicesWithTcpIp>
</Root>


