<?xml version="1.0" encoding="utf-8"?>
<Root>
  <CisSetting>
    <Name>Рижский</Name>
    <EndpointAddress>http://127.0.0.1:50000/Service/Cis</EndpointAddress>
  </CisSetting>

  <LogSetting>
    <PortionString>2</PortionString>
	<CountPortion>2</CountPortion>
  </LogSetting>

  <SerialPorts>
	<Serial>
      <Port>3</Port>
	  <BaudRate>19200</BaudRate>
	  <DataBits>8</DataBits>
	  <StopBits>1</StopBits>
	  <Parity>Even</Parity>  
	  <DtrEnable>True</DtrEnable> 
	  <RtsEnable>True</RtsEnable> 
    </Serial>
  </SerialPorts>

  <DevicesWithSP> 
	 <DeviceSp Id="22" Name="MyVidorDisplay" Port="3" Address="1" TimeRespone="1000" Description="Вывод ПРИГОРОДНОГО расписания." Binding="ToPath:1">
	      <ExchangeRules>
		     <Rule Format = "ascii">
			    <Request maxLenght = "250">
				    STX{AddressDevice:X2}{Nbyte:X2}
					%30{Hour:D2}{Minute:D2}{Second:D2}<!-- синхр. вр -->
					%000011460144%10$18$00$60$t2ПУТЬ №{numberOfPath} <!-- Вывод Пути -->
					%42001192016016<!-- Вывод гор.линии -->
					%000011460314%10$18$00$60$t3{stations}<!-- Вывод станций -->
					%001521920314%10$18$00$60$t3{time}<!-- Вывод времени -->
					%000011920464%10$18$00$60$t3{note}<!-- Вывод примечание -->
					{CRCXor:X2}ETX
		        </Request >
				
			    <Response maxLenght = "8" TimeRespone="1000">
				    STX0200FDETX
		        </Response >	  
		     </Rule>
		  </ExchangeRules>
	 </DeviceSp>
	 
	 


	 
	 
